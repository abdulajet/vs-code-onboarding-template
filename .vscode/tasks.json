{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "OpenFiles",
      "type": "shell",
      "command": "code",
      "args": [
        "./send-sms.js"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "close": true
      }
    },
    {
      "label": "Split",
      "type": "process",
      "command": "${input:splitEditorRight}",
      "presentation": {
        "reveal": "never",
        "close": true
      }
    },
    {
      "label": "OpenBroswer",
      "command": "${input:openSimpleBrowser}",
      "presentation": {
        "reveal": "never",
        "close": true
      }
    },
    {
      "label": "OpenTerminal",
      "command": "${input:openNewTerminal}",
      "presentation": {
        "reveal": "never",
        "close": true
      }
    },
    {
      "label": "Run",
      "dependsOn": [
        "OpenFiles",
        "Split",
        "OpenBroswer",
        "OpenTerminal"
      ],
      "dependsOrder": "sequence",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ],
  "inputs": [
    {
      "id": "splitEditorRight",
      "type": "command",
      "command": "workbench.action.splitEditorRight"
    },
    {
      "id": "openSimpleBrowser",
      "type": "command",
      "command": "simpleBrowser.show",
      "args": [
        "https://abduls.dev"
      ]
    },
    {
      "id": "openNewTerminal",
      "type": "command",
      "command": "workbench.action.terminal.new"
    }
  ]
}